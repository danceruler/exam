@model List<FP_entity.FP_Exam_ExamInfo>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewBag.examTitle</title>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/zui/1.9.0/css/zui.min.css">
    <style>
        * {
            outline: none !important;
        }

        header {
            position: fixed;
            z-index: 99;
            top: 0;
            left: 0;
            width: 100%;
            height: 50px;
            line-height: 50px;
            font-size: 14px;
            color: #333;
            text-align: center;
            font-weight: bold;
            background-color: white;
            box-shadow: 0px 0px 18px 0px rgba(96, 96, 96, 0.15);
        }

        .backbox {
            position: absolute;
            width: 36px;
            transform: translate( 0, -50% );
            top: 50%;
            padding: 10px;
            padding-left: 15px;
            box-sizing: border-box;
        }

        .list {
            padding-top: 20px;
        }

            .list h5 {
                margin: 0;
                font-weight: bold;
            }

        .item {
            overflow: hidden;
            line-height: 34px;
            padding-top: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }
    </style>
</head>


<body>
    <div class="container-fluid">
        <header>
            <div class="backbox" id="goback">
                <i class="icon icon-chevron-left"></i>
            </div>
            @ViewBag.examTitle
        </header>
        <div style="margin-top: 50px"></div>
        <div class="list">
            <h5>试卷列表</h5>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <div class="item" id="@Model[i].id">
                    <a onclick="toExamStart(this)">@Model[i].name</a>
                    <span class="btn btn-primary pull-right gotest" onclick="toExamStart(this)">进入考试</span>
                </div>
            }

            @*<div class="item">
                    <a>公司基本制度考试</a>
                    <span class="btn btn-primary pull-right gotest">进入考试</span>
                </div>
                <div class="item">
                    <a>公司基本制度考试</a>
                    <span class="btn btn-primary pull-right gotest">进入考试</span>
                </div>*@
        </div>

    </div>





    <script src="//cdnjs.cloudflare.com/ajax/libs/zui/1.9.0/lib/jquery/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/zui/1.9.0/js/zui.min.js"></script>
    <script src="~/Scripts/js/const.js"></script>
    <!-- <script src="js/phone_rem.js"></script> -->
    <script>
        $(function () {

            $(goback).click(() => {
                window.location.href = domainPath+"/Exam/Index";
            })

            //$(".gotest").on("click",()=>{
            //    window.location.href = "testinfo.html"
            //})
        })

        function toExamStart(obj) {
            var div = obj.parentNode;
            window.location.href = domainPath + "/Exam/StartExamView?examid=" + div.id;
        }
    </script>
</body>
